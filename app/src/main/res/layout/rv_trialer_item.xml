<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_youtube"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_trailername"/>

    <TextView
        android:id="@+id/tv_trailername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/youtube"
        app:layout_constraintLeft_toRightOf="@+id/youtube"
        app:layout_constraintTop_toTopOf="@+id/youtube"
        tools:text="heyddddddddd" />

</android.support.constraint.ConstraintLayout>